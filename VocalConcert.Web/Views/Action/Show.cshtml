@model VocalConcert.Web.Models.ViewModel.vAction

@{
    ViewBag.Title = "Show";
}

<h2>活动展示</h2>

<div class="jumbotron">
    <dl class="dl-horizontal">




        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            发起人
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Username)
        </dd>

        <dt>
            所属歌友会
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group.Title)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Begin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Begin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hint)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hint)
        </dd>
    </dl>

    <p>
        参与人员:
        @foreach (var user in Model.Users)
        {
            <div style="float:left;margin-right:20px;"><a href="/User/@user.ID">@user.Username</a> </div>
        }
    </p>
    <div class="clr"></div>
    <p>
        @if (ViewBag.CurrentUser != null)
        {
            if (ViewBag.CurrentUser.ID == Model.UserID)
            {
                <span>@Html.ActionLink("修改", "Edit", new { id = Model.ID })</span>
                <span>@Html.ActionLink("删除", "Delete", new { id = Model.ID })</span>
            }
        }

        @if (@Model.CurrentIsExist == true)
        {
            <a href="/Action/Quit?aid=@Model.ID&uid=@ViewBag.CurrentUser.ID">退出该活动</a>
        }
        else
        {
            <a href="/Action/Attend/@Model.ID">参与</a>
        }


    </p>
</div>


