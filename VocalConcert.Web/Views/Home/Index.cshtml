@{
    ViewBag.Title = " 首页";
}

<div class="jumbotron">
     <div>
          热门歌友会：
          @foreach (var group in ViewBag.Groups2 as List<vGroup>)
          { 
            <div><a href="/Concert/Show/@group.ID">@group.Title</a></div>
          }

     </div>
    <div>
        最新歌友会：
        @foreach (var group in ViewBag.Groups as List<vGroup>)
        {
            <div><a href="/Concert/Show/@group.ID">@group.Title</a></div>
        }
    </div>

    <div>
        热门活动：
        @foreach (var action in ViewBag.Actions2 as List<vAction>)
        {
            <div><a href="/Action/Show/@action.ID">@action.Title</a></div>
        }
    </div>
    <div>
        最新活动：
        @foreach (var action in ViewBag.Actions as List<vAction>)
        {
            <div><a href="/Action/Show/@action.ID">@action.Title</a></div>
        }
    </div>


    <div>
        热门音乐：
        @foreach (var music in ViewBag.Musics2 as List<vMusic>)
        {
            <div><a href="/Music/Show/@music.ID">@music.Title</a> 分数：@music.Score @@<a href="/User/@music.UserID">@music.User.Username</a> <span>@music.Time</span></div>
        }
    </div>
    <div>
        最新音乐：
        @foreach (var music in ViewBag.Musics1 as List<vMusic>)
        {
            <div><a href="/Music/Show/@music.ID">@music.Title</a></div>
        }
    </div>

    <div>
        最新优惠产品：
        @foreach (var product in ViewBag.Products as List<vProduct>)
        {
            <div><a href="/Product/Show/@product.ID">@product.Title</a> <span>@product.Status</span>@@<a href="/User/@product.UserID">@product.User.Username</a>  @product.Time</div>
        }
    </div>
